
<h2>Celebrities</h2>

{{#each celebrities}}

    <li>
        <a href="/celebrities/{{id}}">{{name}}</a>
        <form action="celebrities/{{id}}/delete" method="POST">
            <button type="submit">Delete</button>
        </form>
    </li>

{{/each}}

